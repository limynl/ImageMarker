<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rfal="http://schemas.android.com/apk/res-auto"
    xmlns:rfab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_hobby"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.team.imagemarker.activitys.hobby.HobbyActivity">

    <include layout="@layout/title_bar"/>

    <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout
        android:id="@+id/rfa_layout"
        android:layout_below="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        rfal:rfal_frame_color="#000"
        rfal:rfal_frame_alpha="0.3">

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hot_recycleview"/>

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
            android:id="@+id/rfa_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="35dp"
            rfab:rfab_size="normal"
            rfab:rfab_drawable="@drawable/rfab__drawable_rfab_default"
            rfab:rfab_color_normal="#F88F55"
            rfab:rfab_color_pressed="#F88F55"
            rfab:rfab_shadow_radius="3dp"
            rfab:rfab_shadow_color="#999999"
            rfab:rfab_shadow_dx="0dp"
            rfab:rfab_shadow_dy="5dp" />

    </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>

</RelativeLayout>