<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#66ba8e"
        android:layout_alignParentTop="true"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="4dp"
            app:cardElevation="6dp"
            app:cardPreventCornerOverlap="true">
            <!--app:contentPadding="8dp"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:background="@mipmap/loginback"/>

                <com.team.imagemarker.utils.PaperButton
                    android:layout_marginTop="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    widget:paper_corner_radius="19dp"
                    widget:paper_text="继续完成任务"
                    widget:paper_text_size="16sp"
                    widget:paper_color="#ff7474"
                    widget:paper_text_color="#ffffff" />

                </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>